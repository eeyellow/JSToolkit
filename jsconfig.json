{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2021",
        "jsx": "react",
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}